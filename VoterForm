#include <string>
#include <iostream>
using namespace std;

string formRegistrationInfo[6];
string form;

void fillOutForm();

class VoterForm {
    public:
    string formRegistrationInfo[6]; //fName, lName, age, residency, ssn,           felony
    string form; //Overseas, Online, xxxxx
    void fillOutForm();
};

void fillOutForm() {
  cout << "Which form would you like to fill out? (Overseas, Online, xxxxx)" << endl;
  getline(cin, form);
  
  cout << "Enter your first name: " << endl;
  cin >> formRegistrationInfo[0];
  
  cout << "Enter your last name: " << endl;
  cin >> formRegistrationInfo[1];
  
  cout << "Enter your age: " << endl;
  cin >> formRegistrationInfo[2];
  
  cout << "Enter your address: " << endl;
  getline(cin, formRegistrationInfo[3]);
  
  cout << "Enter your SSN: " << endl;
  cin >> formRegistrationInfo[4];
  
  cout << "Have you commited a felony (Y/N)" << endl;
  cin >> formRegistrationInfo[5];
}
