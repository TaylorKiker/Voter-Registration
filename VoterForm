#include <string>
#include <iostream>
using namespace std;

string registrationInfo[6];
string form;

void fillOutForm();
void updateInfo();
void passToChecker();

int main() {
  fillOutForm();
  updateInfo();
}

class VoterForm {
    public:
    string registrationInfo[6]; //fName, lName, age, residency, ssn,           felony
    string form; //Overseas, Online, xxxxx
    void fillOutForm();
    void updateInfo();
    void passToChecker();
};

void fillOutForm() {
  cout << "Which form would you like to fill out? (Overseas, Online, xxxxx)" << endl;
  getline(cin, form);
  
  cout << "Enter your first name: " << endl;
  cin >> registrationInfo[0];
  
  cout << "Enter your last name: " << endl;
  cin >> registrationInfo[1];
  
  cout << "Enter your age: " << endl;
  cin >> registrationInfo[2];
  
  cout << "Enter your address: " << endl;
  getline(cin, registrationInfo[3]);
  
  cout << "Enter your SSN: " << endl;
  cin >> registrationInfo[4];
  
  cout << "Have you commited a felony (Y/N)" << endl;
  cin >> registrationInfo[5];
}
